<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="bottom"
    android:background="@color/faveo"
    android:padding="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hintedlainesansregular"
        android:text="Welcome to Faveo Helpdesk Android App. Lets explore it."
        android:textSize="20sp"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/continueExploring"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/hintedlainesansregular"
        android:background="@drawable/rectangle3"
        android:text="OK"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/faveo" />

</RelativeLayout>