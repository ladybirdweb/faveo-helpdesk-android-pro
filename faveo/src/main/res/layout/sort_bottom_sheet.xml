<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:alpha="0.6"
        android:background="@color/faveo"
        android:drawableLeft="@drawable/ic_action_sort"
        android:gravity="center|start"
        android:text="@string/sort_by"
        android:textColor="@color/shade_white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_200" />

    <co.helpdesk.faveo.pro.frontend.views.BottomSheetListView
        android:id="@+id/ViewBtmSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/grey_200"
        android:dividerHeight="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <TextView
            android:id="@+id/item_dsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="100"
            android:text="@string/descending"
            android:textSize="16sp"
            android:textStyle="bold" />

        <co.helpdesk.faveo.pro.frontend.views.SmoothCheckBox
            android:id="@+id/scb_dsc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:color_checked="@color/faveo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <TextView
            android:id="@+id/item_asc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="100"
            android:text="@string/ascending"
            android:textSize="16sp"
            android:textStyle="bold" />

        <co.helpdesk.faveo.pro.frontend.views.SmoothCheckBox
            android:id="@+id/scb_asc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:color_checked="@color/faveo" />
    </LinearLayout>
</LinearLayout>