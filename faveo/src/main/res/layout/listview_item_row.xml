        <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/attachedCollaborator"
            android:layout_width="match_parent"
            android:layout_height="70dp"
    android:layout_margin="5dp"
            android:padding="10dp"
            android:background="@drawable/rectanglenew"
            android:backgroundTint="@color/colorAccent">

                <ImageView
                    android:id="@+id/imageView_collaborator"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rounded_textview"
                    android:contentDescription="TODO"
                    android:src="@drawable/default_pic"
                    android:transitionName="@string/blue_name"
                    android:layout_marginStart="14dp" />

        <TextView
            android:id="@+id/textView_client_email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView_collaborator"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="21dp"
            android:alpha=".54"
            android:fontFamily="@font/hintedlainesansregular"
            android:maxLines="1"
            android:text="@string/dummy_mail_id"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/collaboratorname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_client_email"
            android:fontFamily="@font/hintedlainesansregular"
            android:text="Sayar Samanta"
            android:textSize="15sp"
            android:maxLines="1"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/deleteCollaborator"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="11dp"
            android:backgroundTint="@color/grey_500"
            android:button="@null"
            android:foregroundGravity="center"
            android:scaleX="0.70"
            android:scaleY="0.70"
            android:src="@drawable/ic_close_24dp"
            android:visibility="visible" />


        </RelativeLayout>
