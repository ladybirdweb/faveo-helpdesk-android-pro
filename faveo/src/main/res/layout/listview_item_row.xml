<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ticket"
    android:background="@color/grey_500"
    card_view:cardBackgroundColor="@color/grey_500"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true">
<RelativeLayout
    android:id="@+id/attachedCollaborator"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:padding="10dp"
    android:background="#f6f6f6"
    >

        <ImageView
            android:id="@+id/imageView_collaborator"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:alpha=".3"
            android:background="@drawable/rounded_textview"
            android:contentDescription="TODO"
            android:src="@drawable/default_pic"
            android:transitionName="@string/blue_name" />

        <TextView
            android:id="@+id/textView_client_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/collaboratorname"
            android:layout_below="@+id/collaboratorname"
            android:alpha=".54"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="@string/dummy_mail_id"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/collaboratorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView_collaborator"
            android:layout_marginStart="69dp"
            android:fontFamily="sans-serif-medium"
            android:text="Sayar Samanta"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/deleteCollaborator"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/textView_client_email"
            android:layout_alignParentStart="true"
            android:button="@drawable/custom_checkbox"
            android:scaleX="0.70"
            android:scaleY="0.70"
            android:visibility="gone" />




</RelativeLayout>
</android.support.v7.widget.CardView>