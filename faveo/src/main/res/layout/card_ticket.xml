<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ticket"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_ripple"
        android:focusable="true">

        <TextView
            android:id="@+id/textView_ticket_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!--<TextView-->
        <!--android:id="@+id/textView_ticket_bubble"-->
        <!--android:layout_width="24dp"-->
        <!--android:layout_height="24dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_below="@+id/textView_ticket_time"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginLeft="18dp"-->
        <!--android:layout_marginTop="4dp"-->
        <!--android:fontFamily="sans-serif-medium"-->
        <!--android:gravity="center"-->
        <!--android:text="12"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="12sp"-->
        <!--android:visibility="visible" />-->

        <TextView
            android:id="@+id/textView_ticket_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/imageView_default_profile"
            android:alpha=".54"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="@string/aaaa_0001_0000001"
            android:textColor="@color/black"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/textView_ticket_subject"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_ticket_number"
            android:layout_alignStart="@+id/textView_ticket_number"
            android:layout_below="@+id/textView_ticket_number"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/overdue_view"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:textStyle="bold"
            android:text="Test Tciket"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_ticket_subject"
            android:layout_centerVertical="true"
            android:layout_below="@+id/textView_ticket_subject"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:alpha=".68"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:maxLines="1"
            android:text="@string/dummy_name"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/user"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView_client_name"
            android:layout_marginStart="156dp"
            android:visibility="gone"
            app:srcCompat="@drawable/userpic"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/agentassigned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_client_name"
            android:layout_below="@+id/imageView_default_profile"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Sayar.samanta@ladybirdweb.com"
            android:maxLines="1"
            android:alpha=".88"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#696969"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView_default_profile"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textView_ticket_id"
            android:layout_toRightOf="@+id/textView_ticket_id"
            android:src="@drawable/default_pic"
            android:transitionName="@string/blue_name"
            android:backgroundTint="@color/faveo"

            />
        <View
            android:id="@+id/priority_view"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/background_dim_overlay" />

        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:id="@+id/textView_ticket_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/priority_view"
            android:layout_toStartOf="@+id/priority_view"
            android:alpha=".50"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="@string/dummy_date"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/overdue_view"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView_ticket_time"
            android:layout_alignTop="@+id/agentassigned"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="@string/due_today"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/duetoday"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView_ticket_time"
            android:layout_alignTop="@+id/agentassigned"
            android:background="@drawable/rectangle2"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="@string/due_today"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/countthread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_above="@+id/textView_ticket_subject"
            android:layout_toEndOf="@+id/textView_ticket_number"
            android:text="(2)"
            android:textColor="#606060"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/attachment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_ticket_time"
            android:layout_alignTop="@+id/countthread"
            android:layout_toEndOf="@+id/countthread"
            android:layout_toRightOf="@+id/textView_ticket_number"
            android:visibility="visible"
            app:srcCompat="@drawable/attachment" />

        <ImageView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_ticket_time"
            android:layout_alignTop="@+id/collaborator"
            android:layout_toEndOf="@+id/attachment_icon"
            android:layout_toRightOf="@+id/textView_ticket_number"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_attach_file_black_18dp" />

        <ImageView
            android:id="@+id/collaborator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_ticket_time"
            android:layout_alignTop="@+id/textView_ticket_time"
            android:layout_toEndOf="@+id/source"
            android:layout_toRightOf="@+id/source"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_attach_file_black_18dp" />


        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_ticket_id"
            android:layout_toEndOf="@+id/textView_ticket_id"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height=".1dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView_ticket_id"
            android:layout_toRightOf="@+id/textView_ticket_id"
            android:background="@color/grey_500"
            android:id="@+id/view4" />

        <ImageView
            android:id="@+id/agentAssigned"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignTop="@+id/agentassigned"
            android:layout_toEndOf="@+id/agentassigned"
            app:srcCompat="@drawable/agent"
            android:visibility="gone"
            android:tint="#808080"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>