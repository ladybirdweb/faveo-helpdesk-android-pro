<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:src="@drawable/pro" />

        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="8dp"
                tools:context=".LoginActivity">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.3"
                    android:text="COMPANY'S URL"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editText_company_url"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_modified_states"
                        android:imeOptions="actionDone"
                        android:inputType="textUri"
                        android:maxLines="1"
                        android:paddingBottom="16dp"
                        android:paddingEnd="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="12dp"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="14sp" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/imageButton_verify_url"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_done_white_24dp"
                        app:fabSize="mini"
                        android:layout_marginRight="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                tools:context=".LoginActivity">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.3"
                    android:text="API KEY(OPTIONAL)"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_company_api_key"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_modified_states"
                    android:imeOptions="actionDone"
                    android:inputType="textWebEditText"
                    android:maxLines="1"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.3"
                    android:text="USERNAME"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/edittext_modified_states"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.3"
                    android:text="PASSWORD"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/edittext_modified_states"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_field_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Empty username"
                        android:textColor="@color/error_red"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/forgot_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.87"
                        android:gravity="end"
                        android:text="Forgot password?"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/button_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:background="@color/blue_300"
                    android:text="Sign In"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>

        </ViewFlipper>

    </LinearLayout>

</ScrollView>