<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"-->
            <!--android:id="@+id/thread"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:clickable="true"-->
            <!--android:focusable="true">-->

            <RelativeLayout
                android:id="@+id/thread"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:animateLayoutChanges="true"
                android:paddingBottom="2dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="2dp">

                <ImageView
                    android:id="@+id/imageView_default_profile"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/default_pic"
                    android:background="@drawable/rounded_textview" />

                <TextView
                    android:id="@+id/textView_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView_default_profile"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/imageView_default_profile"
                    android:alpha="0.54"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-bold"
                    android:text="@string/dummy_name"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.github.curioustechizen.ago.RelativeTimeTextView
                    android:id="@+id/textView_ticket_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView_client_name"
                    android:layout_below="@+id/textView_client_name"
                    android:alpha=".86"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/dummy_date"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView_client_name"
                    android:layout_alignBottom="@+id/textView_client_name"
                    android:layout_marginStart="11dp"
                    android:layout_toEndOf="@+id/textView_client_name"
                    android:text="@string/internal_note"
                    android:textColor="@color/error_red"
                    android:textSize="12sp" />

                <!--<TextView-->
                    <!--android:id="@+id/textView_client_message_title"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_above="@+id/textView_type"-->
                    <!--android:layout_alignStart="@+id/textView_client_name"-->
                    <!--android:alpha=".67"-->
                    <!--android:fontFamily="sans-serif-medium"-->
                    <!--android:text="@string/dummy_title"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:textSize="12sp"-->
                    <!--android:textStyle="bold"-->
                    <!--android:visibility="visible" />-->

            </RelativeLayout>

        <!--</android.support.v7.widget.CardView>-->



        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@color/grey_200"
            android:textSize="16sp"
            android:padding="5dp"
            android:visibility="gone" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"/>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:background="@color/grey_200" />-->

    </LinearLayout>

</LinearLayout>