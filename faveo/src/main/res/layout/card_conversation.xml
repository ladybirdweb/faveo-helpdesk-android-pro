<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:id="@+id/thread"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:clickable="true"-->
        <!--android:focusable="true">-->

        <RelativeLayout
            android:id="@+id/thread"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/custom_ripple"
            android:focusable="true"
            android:paddingBottom="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="2dp">

            <ImageView
                android:id="@+id/imageView_default_profile"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_textview"
                android:src="@drawable/default_pic" />

            <TextView
                android:id="@+id/textView_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.54"
                android:layout_marginTop="15dp"
                android:layout_marginStart="70dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-bold"
                android:text="@string/dummy_name"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showingSome"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_above="@+id/textView_type"
                android:layout_alignParentStart="true"
                android:layout_marginStart="70dp"
                android:alpha=".86"
                android:visibility="visible"
                android:maxLines="2"
                android:text="Hello i saw a vintage table lamp last night on your site"
                android:textColor="@color/black" />

            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:id="@+id/textView_ticket_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView_client_name"
                android:layout_marginEnd="11dp"
                android:alpha=".86"
                android:fontFamily="sans-serif-medium"
                android:text="@string/dummy_date"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView_ticket_time"
                android:text="@string/internal_note"
                android:textColor="@color/error_red"
                android:textSize="12sp" />

            <!--<TextView-->
            <!--android:id="@+id/textView_client_message_title"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_above="@+id/textView_type"-->
            <!--android:layout_alignStart="@+id/textView_client_name"-->
            <!--android:alpha=".67"-->
            <!--android:fontFamily="sans-serif-medium"-->
            <!--android:text="@string/dummy_title"-->
            <!--android:textColor="@color/black"-->
            <!--android:textSize="12sp"-->
            <!--android:textStyle="bold"-->
            <!--android:visibility="visible" />-->

        </RelativeLayout>

        <!--</android.support.v7.widget.CardView>-->

        <LinearLayout
            android:id="@+id/linearWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@color/grey_200"
                android:padding="5dp"
                android:textSize="16sp"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="#E0E0E0" />

            <RelativeLayout
                android:id="@+id/attachmentlayout"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="7dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/imageView5"
                    android:background="@drawable/rectanglereachout"
                    android:text="Attachment"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_attach_file_black_18dp"
                    android:tint="@color/faveo" />

                <!--<TextView-->
                <!--android:id="@+id/attachmentname"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_toEndOf="@+id/imageView5"-->
                <!--android:background="@drawable/rectanglereachout"-->
                <!--android:maxLines="1"-->
                <!--android:padding="1dp"-->
                <!--android:text="sample.jpg"-->
                <!--android:textColor="@color/white" />-->
            </RelativeLayout>

            <View
                android:id="@+id/attachmentSeparation"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="1dp"
                android:background="#E0E0E0" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"
            android:background="#E0E0E0" />
    </LinearLayout>

</LinearLayout>