<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_200"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    android:layout_marginTop="6dp"
    card_view:cardCornerRadius="6dp"
    card_view:contentPadding="2dp"
    android:elevation="5dp"
    android:layout_marginBottom="-3dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/ticket"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/textView_ticket_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView_ticket_number"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_ticket_subject"
        android:layout_alignStart="@+id/textView_ticket_subject"
        android:text="@string/aaaa_0001_0000001"
        android:fontFamily="monospace"/>

    <View
        android:id="@+id/color"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="@color/faveo"
        android:visibility="gone"/>

    <!--<ImageView-->
    <!--android:id="@+id/imageView7"-->
    <!--android:layout_width="32dp"-->
    <!--android:layout_height="32dp"-->
    <!--android:layout_margin="16dp"-->
    <!--android:alpha="0.27"-->
    <!--android:src="@drawable/done_black"-->
    <!--tools:ignore="ContentDescription" />-->

    <TextView
        android:id="@+id/textView_ticket_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view2"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="9dp"
        android:layout_toEndOf="@+id/color"
        android:layout_toRightOf="@+id/color"
        android:ellipsize="end"
        android:fontFamily="monospace"
        android:gravity="center"
        android:maxLines="1"
        android:text="Increase sales value"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewstatusname"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="64dp"
        android:alpha=".7"
        android:background="@drawable/rectangle3"
        android:backgroundTint="@color/grey_200"
        android:fontFamily="monospace"
        android:gravity="center"
        android:maxLines="1"
        android:text="Support"
        android:textColor="@color/black"
        android:textSize="12sp"
        />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:background="@color/grey_200" />

</RelativeLayout>
</android.support.v7.widget.CardView>