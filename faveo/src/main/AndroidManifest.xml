                android:resource="@xml/shortcuts" />
        </activity>
        <activity
            android:name=".frontend.activities.ClientDetailActivity"
            android:label="@string/title_activity_client_profile"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
