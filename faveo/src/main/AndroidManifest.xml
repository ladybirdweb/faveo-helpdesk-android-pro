<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.helpdesk.faveo.pro">

    <uses-sdk tools:overrideLibrary="io.codetail.view" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="co.helpdesk.faveo.pro.FaveoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name="co.helpdesk.faveo.pro.frontend.activities.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.helpdesk.faveo.pro.frontend.activities.ClientDetailActivity"
            android:label="@string/title_activity_client_profile"
            android:screenOrientation="portrait" />
        <activity
            android:name="co.helpdesk.faveo.pro.frontend.activities.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"
            android:screenOrientation="portrait" />
        <activity
            android:name="co.helpdesk.faveo.pro.frontend.activities.SplashActivity"
            android:label="@string/title_activity_splash"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="co.helpdesk.faveo.pro.frontend.activities.TicketDetailActivity"
            android:label="@string/title_activity_ticket_detail"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="OPEN_ACTIVITY_1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.helpdesk.faveo.pro.frontend.activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" />

        <receiver
            android:name=".frontend.receivers.InternetReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="3d31c3fca25cb228d17bfa05856d933d97e90db1" />

        <service android:name="co.helpdesk.faveo.pro.frontend.services.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name="co.helpdesk.faveo.pro.frontend.services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>
